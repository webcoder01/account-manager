{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="columns is-mobile is-centered">
        <div class="column is-half-desktop">
            <div class="box">
                {{ form_start(form) }}

                <div class="field">
                    <label class="label is-small">Email</label>
                    <div class="control">
                        {{ form_widget(form.emailCanonical) }}
                    </div>
                </div>

                <div class="field">
                    <label class="label is-small">Mot de passe</label>
                    <div class="control">
                        {{ form_widget(form.password) }}
                    </div>
                </div>

                <div class="field is-grouped">
                    <p class="control">
                        <button class="button is-primary">Connexion</button>
                    </p>
                    <p class="control">
                        <a href="#" class="button is-text">Mot de passe oubli√© ?</a>
                    </p>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('build/login.js') }}"></script>
{% endblock %}
